{
  "name": "miki-desktop",
  "productName": "Miki Desktop",
  "version": "1.0.0",
  "description": "Miki Desktop",
  "repository": "https://github.com/themimixcompany/miki-desktop",
  "keywords": [
    "mimix",
    "miki",
    "desktop"
  ],
  "author": {
    "name": "The Mimix Company",
    "email": "support@mimix.io",
    "url": "https://miki.mimix.io"
  },
  "license": "UNLICENSED",
  "main": "app/main.js",
  "scripts": {
    "start": "electron ."
  },
  "build": {
    "appId": "io.mimix.miki",
    "directories": {
      "output": "./out"
    },
    "linux": {
      "target": [
        "appimage"
      ],
      "executableName": "Miki Desktop",
      "category": "Utility"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "requestedExecutionLevel": "highestAvailable",
      "icon": "assets/icons/icon.ico"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "category": "public.app-category.utilities",
      "icon": "assets/icons/icon.icns"
    },
    "deb": {},
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true
    }
  },
  "dependencies": {
    "electron-compile": "^6.4.4",
    "fs-extra": "^9.1.0",
    "portscanner": "^2.2.0",
    "system-sleep": "^1.3.7"
  },
  "devDependencies": {
    "@electron-forge/cli": "6.0.0-beta.45",
    "electron": "11.2.2",
    "electron-builder": "^21.2.0",
    "electron-packager": "^14.1.1",
    "electron-prebuilt-compile": "4.0.0",
    "express": "^4.17.1"
  }
}
